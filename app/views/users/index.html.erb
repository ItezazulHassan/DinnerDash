<div class="row full-height">
  <% if user_signed_in? %>
    <div class="col s4 full-height scroll-bar profile_left_tab">
      <div class="card medium">
        <div class="card-image">
          <%= image_tag "picture.png"%>
        </div>
        <div class="card-content">
          <p>Name: <%= @user.name %></p>
          <p>Email: <%= @user.email %></p>
        </div>
        <div class="card-action">
          <%= link_to "Edit Profile", edit_user_path(@user.id)  %>
        <!-- </div> -->
        <!-- <div class="card-action"> -->
        <%= link_to "View Orders", :args => { :show_all => true , :title => "All Orders"} %>
        </div>
      </div>
    </div>

    <div class="col s8">
      <h4 class="order_header"><%= @title %></h4>
        <%= render "layouts/orders_page" %>
    </div>
  <% else %>
    <div class="container">
    <p style="font-size: 30px">No one is currently signed in</p>
    </div>
  <% end %>
</div>
