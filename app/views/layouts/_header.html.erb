<header >
	<div class="row">
		<div class="col s12">
			<%= image_tag("logo3.png", :alt => "logo", :class => "img-logo") %>
			<nav class="z-depth-3 table-top">
				<div class="nav-wrapper">
					<a href="/" class="brand-logo">
						Dinner dash
					</a>
					<ul class="right hide-on-med-and-down">
						<li><a href="/items"><i class="material-icons left">settings_input_svideo</i>Our items</a></li>
						<li><a><i class="material-icons left">settings_phone</i>Find us</a></li>
						<li><a><i class="material-icons left">chat</i>FAQ</a></li>
						<li class="cart-holder <%= cart_properties['status'] %>">
							<%= link_to carts_path, class: "cart left no_left_pad", id: "cart"  do %>
							 	<i class="material-icons left">shopping_cart</i><%= cart_properties['items_count'] %>
							<% end %>
						</li>
						<li>
							<% if current_user %>
								<div class="col s10">
									<span class="black-text">
										<!--<a class="dropdown-button" href="#!" data-activates="dropdown1">-->
										<%= link_to "Logout", destroy_user_session_path, method: :delete %>
									</span>
								</div>
							<% else %>
								<div><%= link_to "Log in", new_user_session_path, :class =>"in-line" %> | <%= link_to "Sign up", new_user_registration_path, :class =>"in-line" %></div>
							<% end %>
						</li>
					</ul>

					<ul id="slide-out" class="side-nav">						
						<li style="margin-left: 170px"><a href="/contact"><i class="material-icons left">settings_phone</i>Find us</a></li>
						<li><a href="/faq"><i class="material-icons left">chat</i>FAQ</a></li>
						<!-- Dropdown Trigger -->

						<li><%= image_tag("yuna.jpg", :alt => "user", :class => "circle small") %></li>
						<li>
							<% if user_signed_in? %>
								<%= link_to "My Profile", user_path(current_user.id),:class=>"dropdown-button" %> My profile<i class="material-icons right">arrow_drop_down</i></^>
							<% end %>
						</li>
					</ul>
					<a href="#" data-activates="slide-out" class="button-collapse right"><i class="mdi-navigation-menu"></i></a>
				</div>
			</nav>
		</div>
	</div>
</header>
