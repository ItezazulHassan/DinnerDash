<div class="panel header-panel flow-text z-depth-3">
      <div id="title">All items</div>
    </div>
<div class="full-height scroll-bar">
	<div class="header">
			<div class="row">
				<div class="input-field col s6">
			    <select class="select_box select_field" style="display:block">
			      <option value="0" selected>Sort by status</option>
			      <option value="/items" >Available</option>
			      <option value="/">Not available</option>
			    </select>
			  </div>

				<div class="input-field col s6">
          <i class="material-icons prefix">search</i>
          <input id="icon_prefix" type="text" class="validate">
          <label for="icon_prefix">Type in item name</label>
				</div>
			</div>

	</div><!--end of header-->
	<div class="body">
		<table class="striped">
		<thead>
			<tr>
					<th data-field="id">Name</th>
					<th data-field="name">Description</th>
					<th data-field="price">Item Price</th>
					<th data-field="price">Category</th>
					<th data-field="price">Available ?</th>
					<th data-field="price">Updated</th>
					<th data-field="price"></th>
			</tr>
		</thead>

		<tbody>
			<% @items.each do |item| %>
				<a href = "/>">
				<tr>
					<td><%=link_to "#{item.name}", edit_item_path(item.id) %></td>
					<td><%= item.description %></td>
					<td><%= item.price %></td>
					<td>
						<div class="switch">
							<label>
								No
								<input class="item_status" type="checkbox" data-status="<%= item.flag %>" data-itemid="<%= item.id %>">
								<span class="lever"></span>
								Yes
							</label>
						</div>
					</td>
					<td><%= item.updated_at.strftime("%Y %e %d") %></td>
					<td>
						<%= button_to item_path(item.id), :class => "clear-button", method: :delete do %>
							<i class="material-icons">clear</i>
						<% end %>
					</td>
				</tr>

			<% end %>
		</tbody>
	</table>
	</div><!--end of header-->
	<div class="footer">
		<div class="row">
		  <div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
		    <a class="btn-floating btn-large red">
		      <i class="large material-icons">add</i>
		    </a>
		    <ul>
		      <li><a href="/items/new" class="btn-floating yellow darken-1"><i class="material-icons">settings_input_svideo</i></a></li>
		    </ul>
		  </div>
		</div>
	</div><!--end of header-->

</div>