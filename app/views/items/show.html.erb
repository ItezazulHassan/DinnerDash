<div class="full-height scroll-bar">
  <div class="row">
    <div class="col s12 m6 l6 flow-text">
      <h3><%= @item.name%></h3>
      <p><%= @item.description %></p>
      <p><%= @item.price %></p>
      <% if !@item.categories.empty?%>
      <p>
        <p>
        Category: 
        <%= @item.categories[0].name %>
        </p>
      </p>
      <% end %>
    </div>

    <div class="container col s12 m6 l6">
      <%= image_tag @item.avatar, id: "drag1" %>
    </div>
  </div>
  
</div>
